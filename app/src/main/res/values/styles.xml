<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DetailButton">
        <item name="android:background">@drawable/button_click_green_line</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:text">Detail</item>
        <item name="android:textColor">@color/main_green</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_height">36dp</item>
    </style>

    <style name="BeliButton">
        <item name="android:background">@drawable/button_click_green_background</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:text">Beli</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_height">36dp</item>
    </style>

    <style name="SelectionContent">
        <item name="fontFamily">@font/montserrat</item>
        <item name="fontStyle">normal</item>
        <item name="android:textSize">12sp</item>
